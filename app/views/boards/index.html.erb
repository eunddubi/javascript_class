<!-- index.html.erb -->
<h1>여기는 INDEX 입니다.</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>글번호</th>
      <th>제목</th>
      <th>보기</th>
      <th>수정</th>
      <th>삭제</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td class="title" data-id="<%= board.id %>"><%= board.title %></td>
      <td><a href="/boards/<%= board.id %>">보기</a></td>
      <td><a href="/boards/<%= board.id %>/edit">수정</a></td>
      <td><a href="/boards/<%= board.id %>" data-method="delete" data-confirm="삭제할꼬얌?">삭제</a></td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="/boards/new" class="btn btn-warning">새글쓰기</a>
<button type="button" class="btn btn-info change-title">제목바꾸기</button>
<button type="button" class="btn color-btn btn-danger" data-class="text-danger">빨강</button>
<button type="button" class="btn color-btn btn-info" data-class="text-primary">파랑</button>
<button type="button" class="btn color-btn btn-success" data-class="text-success">초록</button>

<script>
  $(document).ready(function(){
    // 1.버튼을 클릭하면
    // 1-1.버튼을 찾아서.
    //1-2.버튼에 마우스 오버 이벤트를 달아준다.
    //1-3.버튼이 마우스에서 나갈때 이벤트를 분리해준다.
    $('.color-btn').on('mouseover', function(){
      // console.log($(this));
      // console.log($(this).attr("data-class"));
      // console.log($(this).data("class"));
      var textStyle = $(this).data("class");
      $('.table').toggleClass(textStyle);
    });

    $('.color-btn').on('mouseout', function(){
      var textStyle = $(this).data("class");
      $('.table').toggleClass(textStyle);
    });
  });

  // 1. td에 해당하는 부분을 클릭하면
    $('.title').on('click', function(){
      location.href="/boards/"+$(this).data("id");
    });
  // 2. td 속성에 있는 data-id의 속성값을 가져와서
  // 3. 페이지를 이동시킴
</script>

